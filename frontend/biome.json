{
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**", "!**/vite.config.ts", "!**/routeTree.gen.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": "error",
        "useAwait": "error",
        "noEmptyBlockStatements": "warn",
        "noTsIgnore": "error"
      },
      "correctness": {
        "noReactPropAssignments": "error"
      },
      "complexity": {
        "noImplicitCoercions": "error"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "useExhaustiveSwitchCases": "error",
        "noMisusedPromises": "error"
      },
      "style": {
        "useUnifiedTypeSignatures": "error",
        "useReadonlyClassProperties": "error",
        "useForOf": "warn",
        "useAsConstAssertion": "error",
        "noInferrableTypes": "error",
        "useNamingConvention": "warn",
        "useConsistentArrayType": "warn",
        "noMagicNumbers": "warn"
      },
      "performance": {
        "noDelete": "error"
      }
    },
    "domains": {
      "react": "all",
      "next": "all",
      "project": "all"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
