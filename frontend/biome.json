{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["vite.config.ts", "routeTree.gen.ts", "dist/"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"all": true
			},
			"complexity": {
				"all": true
			},
			"security": {
				"all": true
			},
			"suspicious": {
				"all": true,
				"noReactSpecificProps": "off"
			},
			"style": {
				"all": true
			},
			"recommended": true
		}
	},
	"javascript": {
		"globals": ["React"],
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
